{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.io/schemas/v3/space.json",
  "title": "Space",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "https://api.kohost.io/schemas/v3/definitions/common.json#/definitions/id"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": ["string"],
      "enum": [
        "classRoom",
        "hotelRoom",
        "office",
        "building",
        "commonArea",
        "other"
      ]
    },
    "driver": {
      "$ref": "https://api.kohost.io/schemas/v3/definitions/common.json#/definitions/driver"
    },
    "subType": {
      "type": "string"
    },
    "rooms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "subGroups": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "eco": {
      "type": "object",
      "additionalProperties": false,
      "default": {
        "active": false,
        "allowed": false
      },
      "properties": {
        "active": {
          "type": "boolean",
          "default": false
        },
        "activatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "allowed": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "maximumOccupancy": {
      "type": "number",
      "minimum": 1
    },
    "housekeepingStatus": {
      "type": "string",
      "enum": ["clean", "dirty", "inspected", "pickup"]
    },
    "serviceStatus": {
      "type": "string",
      "enum": ["inService", "outOfOrder", "outOfService"]
    },
    "systemData": {
      "$ref": "https://api.kohost.io/schemas/v3/definitions/common.json#/definitions/systemData"
    }
  },
  "if": {
    "properties": { "type": { "const": "hotelRoom" } }
  },
  "then": {
    "required": [
      "name",
      "type",
      "features",
      "maximumOccupancy",
      "housekeepingStatus",
      "serviceStatus"
    ],
    "properties": {
      "features": {
        "default": []
      },
      "maximumOccupancy": {
        "default": 2
      },
      "housekeepingStatus": {
        "default": "dirty"
      },
      "serviceStatus": {
        "default": "inService"
      }
    }
  },
  "else": {
    "required": ["name", "type"]
  }
}
