{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "ticket.json",
  "title": "Ticket",
  "description": "A ticket is a request for help from a user.",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "definitions.json#/definitions/id"
    },
    "conversation": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
          "userName": {
            "type": "string"
          },
          "timestamp": {
            "$ref": "definitions.json#/definitions/createdAt"
          },
          "body": {
            "type": "string"
          },
          "readBy": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string"
            }
          },
          "media": {
            "$ref": "mediaFile.json"
          }
        },
        "required": ["userId", "id", "timestamp", "body"]
      }
    },
    "requester": {
      "type": "string"
    },
    "assignedTo": {
      "type": ["string", "null"]
    },
    "status": {
      "type": "string",
      "enum": ["open", "pending", "solved", "closed"],
      "default": "open"
    },
    "tags": {
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "rating": {
      "type": "number",
      "minimum": 0,
      "maximum": 5
    },
    "ratingComment": {
      "type": "string"
    },
    "createdAt": {
      "$ref": "definitions.json#/definitions/date"
    },
    "updatedAt": {
      "$ref": "definitions.json#/definitions/date"
    },
    "solvedAt": {
      "$ref": "definitions.json#/definitions/date"
    },
    "closedAt": {
      "$ref": "definitions.json#/definitions/date"
    }
  },
  "required": [
    "id",
    "conversation",
    "requester",
    "status",
    "tags",
    "createdAt",
    "updatedAt"
  ],
  "additionalProperties": false
}
