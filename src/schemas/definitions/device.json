{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.io/schemas/v3/definitions/device.json",
  "definitions": {
    "id": {
      "$ref": "https://api.kohost.io/schemas/v3/definitions/common.json#/definitions/id"
    },
    "systemData": {
      "$ref": "https://api.kohost.io/schemas/v3/definitions/common.json#/definitions/systemData"
    },
    "type": {
      "type": "string",
      "enum": [
        "dimmer",
        "switch",
        "motionSensor",
        "windowCovering",
        "camera",
        "mediaSource",
        "thermostat",
        "lock",
        "courtesy",
        "sceneController",
        "gateway",
        "tv",
        "dvr",
        "appleTv",
        "discPlayer",
        "mediaPlayer",
        "uncontrolledDevice"
      ]
    },
    "name": {
      "type": "string"
    },
    "subType": {
      "type": ["string", "null"]
    },
    "supportedNotifications": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "enum": [
          "button 1",
          "button 2",
          "button 3",
          "button 4",
          "button 5",
          "idle",
          "powerHasBeedApplied",
          "acMainsDisconnected",
          "acMainsReconnected",
          "replaceBatterySoon",
          "replaceBatteryNow",
          "hardwareFailure",
          "softwareFailure",
          "hardwareFailureWithCode",
          "softwareFailureWithCode",
          "motionDetection"
        ]
      }
    },
    "notification": {
      "type": ["object", "null"],
      "properties": {
        "name": {
          "type": "string",
          "$ref": "#/definitions/supportedNotifications/items"
        },
        "timestamp": {
          "type": "number",
          "minimum": 1655907956593
        }
      }
    },
    "batteryLevel": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "watts": {
      "type": "number",
      "minimum": 0,
      "default": 0
    }
  }
}
