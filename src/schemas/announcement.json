{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "announcement.json",
  "title ": "Announcement",
  "description": "Announcement message sent to users",
  "type": "object",
  "properties": {
    "id": { "$ref": "definitions.json#/definitions/id" },
    "users": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "messages": {
      "type": "array",
      "items": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "userName": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "media": {
          "anyOf": [{ "$ref": "mediaFile.json" }, { "type": "null" }]
        },
        "timestamp": {
          "$ref": "definitions.json#/definitions/createdAt"
        }
      }
    },
    "media": {
      "$ref": "mediaFile.json"
    },
    "tag": {
      "type": "string"
    },
    "createdAt": {
      "$ref": "definitions.json#/definitions/date"
    },
    "updatedAt": {
      "$ref": "definitions.json#/definitions/date"
    }
  },
  "required": ["body"],
  "additionalProperties": false
}
