    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "json-schema-to-typescript": "^14.0.4",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "ajv-formats": "^3.0.1",
    "amqplib": "^0.10.3",
    "axios": "^1.6.7",
    "debug": "^4.3.4",
