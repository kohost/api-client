{
  "name": "@kohost/api-client",
  "version": "3.9.7",
  "description": "API client, models, schemas, commands, and events for Kohost applications",
  "author": "Ian Rogers",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kohost/api-client.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "node": {
        "import": "./dist/node/esm/index.js",
        "require": "./dist/node/cjs/index.js",
        "types": "./dist/types/index.d.ts"
      },
      "browser": {
        "import": "./dist/browser/esm/index.js",
        "require": "./dist/browser/cjs/index.js",
        "types": "./dist/types/index.d.ts"
      },
      "default": {
        "import": "./dist/node/esm/index.js",
        "require": "./dist/node/cjs/index.js",
        "types": "./dist/types/index.d.ts"
      }
    }
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint",
    "lint:fix": "eslint --fix ./",
    "prepare": "husky",
    "build": "node scripts/build.mjs",
    "build:watch": "node scripts/build.js --watch",
    "generate-models": "node scripts/generate-source-models.mjs",
    "start": "node scripts/build.js --watch",
    "clean": "rm -rf ./dist",
    "tsc": "tsc",
    "tsup": "tsup src/**/* --dts-only --cjsInterop --outDir dist/types"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/debug": "^4.1.12",
    "@types/events": "^3.0.3",
    "ajv": "^8.11.0",
    "ajv-formats": "^3.0.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "glob": "^11.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "tsup": "^8.3.5",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "axios": "^1.6.7",
    "debug": "^4.3.4",
    "socket.io-client": "^4.6.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,json}": "prettier --write"
  }
}
