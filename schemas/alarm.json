{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/alarm.json",
  "title": "Alarm",
  "description": "Any smart alarm system",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "https://api.kohost.app/schemas/v3/device.json#/definitions/id"
    },
    "type": {
      "$ref": "https://api.kohost.app/schemas/v3/device.json#/definitions/type"
    },
    "systemData": {
      "$ref": "https://api.kohost.app/schemas/v3/device.json#/definitions/systemData"
    },
    "supportedNotifications": {
      "$ref": "https://api.kohost.app/schemas/v3/device.json#/definitions/supportedNotifications"
    },
    "notification": {
      "$ref": "https://api.kohost.app/schemas/v3/device.json#/definitions/notification"
    },
    "areas": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "number": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "securityMode": {
            "type": "string",
            "enum": ["arming", "disarming", "armed", "disarmed", "alarm"]
          },
          "readyToArm": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },
    "zones": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "number": {
            "type": "number",
            "minimum": 0
          },
          "name": {
            "type": "string"
          },
          "secure": {
            "type": "boolean"
          },
          "bypassed": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },
    "supportedTroubles": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": ["battery", "ac", "phone", "bell", "fire"]
      }
    },
    "troubles": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "$ref": "#/properties/supportedTroubles/items"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "type",
    "systemData",
    "areas",
    "zones",
    "supportedTroubles",
    "troubles"
  ]
}
