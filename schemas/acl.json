{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/acl.json",
  "title": "Access Control List Schema",
  "type": "object",
  "default": {},
  "required": ["id", "name", "resource", "resourceFilter", "permissions"],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "resourceType": {
      "type": "string",
      "enum": [
        "*",
        "Guest",
        "Reservation",
        "User",
        "Manager",
        "Admin",
        "SuperAdmin",
        "Ticket",
        "Group",
        "HotelRoom",
        "Room",
        "Notification",
        "Image",
        "EnergyReport",
        "RoomType",
        "SceneTemplate",
        "Setting",
        "Subscription",
        "Integration",
        "PMS",
        "Source",
        "ACL"
      ]
    },
    "resource": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "resourceFilter": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "resourceType": {
            "type": "string",
            "enum": ["SubSystem"]
          },
          "resource": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "permissions": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": [
                "*",
                "read",
                "write",
                "delete",
                "create",
                "update",
                "list",
                "execute"
              ]
            }
          }
        }
      }
    },
    "permissions": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "*",
          "read",
          "write",
          "delete",
          "create",
          "update",
          "list",
          "execute"
        ]
      }
    },
    "begins": {
      "type": ["object", "null"]
    },
    "expires": {
      "type": ["object", "null"]
    },
    "global": {
      "type": "boolean",
      "default": false
    }
  },
  "definitions": {}
}
