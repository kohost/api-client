{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/user.json",
  "title": "User",
  "type": "object",
  "required": ["active", "lastName", "roles"],
  "properties": {
    "id": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/id"
    },
    "type": {
      "type": "string",
      "default": "user"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "firstName": {
      "type": "string" 
    },
    "lastName": {
      "type": "string"
    },
    "phone": {
      "type": "string",  
      "pattern": "^\\+[0-9]{1,14}$"  
    },
    "email": {
      "type": ["string", "null"],
      "format": "email"
    },
    "address": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/address"
    },
    "hashedPassword": {
      "type": "string"
    },
    "photo": {
      "type": "string"
    },
    "jobTitle": {
      "type": "string"
    },
    "dob": {
      "type": "string"
    },
    "gender": {
      "type": "string",
      "enum": ["male", "female", "tranny"]  
    },
    "nationality": {
      "type": "string",
      "minLength": 2,
      "maxLength": 2
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string" 
      }
    },
    "files": {
      "type":"array",
      "items": {
        "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/file"
      }
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Guest",
          "Staff",
          "Faculty",
          "Student",
          "Visitor",
          "Manager",
          "Administrator",
          "SuperAdmin"
        ]
      }
    },
    "identifications": { 
      "type": "array",
      "items": {
        "$ref": "https://api.kohost.app/schemas/v3/identification.json#"   
      }
    },
    "payments": {
      "type": "array",
      "items": {
        "$ref": "https://api.kohost.app/schemas/v3/payment.json#"   
      }
    },
    "preferences": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "notifications": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "examples": [["roomControl", "marketing"]]
        },
        "location": {
          "title": "The location Schema", 
          "type": "boolean",
          "default": false,
          "examples": [true]
        }
      }
    },
    "location": {
      "type": "object",
      "required": ["accuracy", "latitude", "longitude", "timestamp"],
      "additionalProperties": false,
      "properties": {
        "accuracy": {
          "type": ["number", "null"]
        },
        "latitude": {
          "type": ["number", "null"]
        },
        "longitude": {
          "type": ["number", "null"]
        },
        "timestamp": {
          "type": ["number", "null"]
        }
      }
    },
    "createdAt": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/createdAt"
    },
    "updatedAt": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/updatedAt"
    },
    "systemData": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/systemData"
    }
  }
}
