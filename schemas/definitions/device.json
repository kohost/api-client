{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/device.json",
  "definitions": {
    "id": {
      "type": "string"
    },
    "systemData": {
      "type": "object"
    },
    "type": {
      "type": "string"
    },
    "supportedNotifications": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "enum": [
          "idle",
          "powerHasBeedApplied",
          "acMainsDisconnected",
          "acMainsReconnected",
          "replaceBatterySoon",
          "replaceBatteryNow",
          "hardwareFailure",
          "softwareFailure",
          "hardwareFailureWithCode",
          "softwareFailureWithCode",
          "motionDetection"
        ]
      }
    },
    "notification": {
      "type": ["object", "null"],
      "properties": {
        "name": {
          "type": "string",
          "$ref": "#/definitions/supportedNotifications/items"
        },
        "timestamp": {
          "type": "number",
          "minimum": 1655907956593
        }
      }
    }
  }
}
