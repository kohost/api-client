{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/definitions/user.json",
  "definitions": {
    "id": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/id"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "phone": {
      "type": "string",
      "pattern": "^\\+?[1-9]{1,14}$"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "hashedPassword": {
      "type": "string"
    },
    "photo": {
      "type": "string"
    },
    "jobTitle": {
      "type": "string"
    },
    "gender": {
      "type": "string"
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Staff",
          "Faculty",
          "Student",
          "Guest",
          "Manager",
          "Administrator",
          "SuperAdmin"
        ]
      }
    },
    "preferences": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "notifications": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "examples": [["roomControl", "marketing"]]
        },
        "location": {
          "title": "The location Schema",
          "type": "boolean",
          "default": false,
          "examples": [true]
        }
      }
    },
    "location": {
      "type": "object",
      "default": {},
      "required": ["accuracy", "latitude", "longitude", "timestamp"],
      "additionalProperties": false,
      "properties": {
        "accuracy": {
          "type": ["number", "null"]
        },
        "latitude": {
          "type": ["number", "null"]
        },
        "longitude": {
          "type": ["number", "null"]
        },
        "timestamp": {
          "type": ["number", "null"]
        }
      }
    }
  }
}
