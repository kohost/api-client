{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/definitions/common.json",
  "definitions": {
    "id": {
      "type": "string"
    },
    "systemData": {
      "type": "object",
      "default": {}
    },
    "metadata": {
      "type": "object",
      "default": {}
    },
    "createdAt": {
      "type": ["string", "object"],
      "format": "date-time"
    },
    "updatedAt": {
      "type": ["string", "object"],
      "format": "date-time"
    },
    "address": {
      "type":"object",
      "properties": {
        "id": {
          "type":"string"
        },
        "line1": {
          "type":"string"
        },
        "line2": {
          "type":"string"
        },
        "line3": {
          "type":"string"
        },
        "city": {
          "type":"string"
        },
        "state": {
          "type":"string"
        },
        "postalCode": {
          "type":"string"
        },
        "countryCode": {
          "type":"string",
          "minLength": 2,
          "maxLength": 2
        }
      }
    }
  }
}
