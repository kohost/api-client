{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/identification.json",
  "title": "Identification",
  "type": "object",
  "required": ["type", "number", "expires"],
  "properties": {
    "id": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/id"
    },
    "type": {
      "type": "string",
      "enum": ["driversLicense", "passport", "identityCard", "visa"]  
    },
    "number": {
      "string": "string"
    },
    "issued": {
      "type": ["string", "object"],
      "format": "date-time"
    },
    "expires": {
      "type": ["string", "object"],
      "format": "date-time"
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "matched": {
      "type": "boolean",
      "default": false
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "issuingCountry": {
      "string": "string",
      "minLength": 2,
      "maxLength": 2
    },
    "systemData": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/systemData"
    }
  }
}
