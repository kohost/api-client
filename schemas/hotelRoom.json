{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/hotelRoom.json",
  "title": "Hotel Room",
  "type": "object",
  "default": {},
  "required": ["name", "status", "rooms"],
  "properties": {
    "id": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/id"
    },
    "name": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["clean", "dirty", "inspected", "outOfOrder"],
      "default": "dirty"
    },
    "rooms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "eco": {
      "active": {
        "type": "boolean",
        "default": false
      },
      "activatedAt": {
        "type": "string",
        "format": "date-time"
      },
      "allowed": {
        "type": "boolean",
        "default": false
      }
    },
    "adultCount": {
      "type": "number",
      "default": 1,
      "minimum": 0
    },
    "childCount": {
      "type": "number",
      "default": 0,
      "minimum": 0
    },
    "systemData": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/systemData"
    }
  }
}
