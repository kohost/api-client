{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/room.json",
  "title": "Ticket",
  "description": "A ticket is a request for help from a user.",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/id"
    },
    "conversation": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "user": {
            "type": "string"
          },
          "messageId": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "body": {
            "type": "string"
          },
          "readBy": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["user", "messageId", "timestamp", "body"]
      }
    },
    "requester": {
      "type": "string"
    },
    "assignedTo": {
      "type": ["string", "null"]
    },
    "status": {
      "type": "string",
      "enum": ["open", "pending", "solved", "closed"],
      "default": "open"
    },
    "tags": {
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "sentiment": {
      "type": "object"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "solvedAt": {
      "type": "string",
      "format": "date-time"
    },
    "closedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "conversation",
    "requester",
    "assignedTo",
    "status",
    "tags",
    "createdAt",
    "updatedAt"
  ],
  "additionalProperties": false
}
