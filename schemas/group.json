{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/group.json",
  "title": "Group",
  "type": "object",
  "default": {},
  "required": ["name", "rooms"],
  "properties": {
    "id": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/id"
    },
    "name": {
      "type": "string"
    },
    "rooms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "eco": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "active": {
          "type": "boolean",
          "default": false
        },
        "activatedAt": {
          "type": "string"
        },
        "allowed": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "systemData": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/systemData"
    }
  }
}
