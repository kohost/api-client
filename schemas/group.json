{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/group.json",
  "title": "Group",
  "type": "object",
  "required": ["name", "rooms"],
  "properties": {
    "id": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/id"
    },
    "name": {
      "type": "string"
    },
    "type": {
      "type": ["string"],
      "enum": ["Classroom", "Hotel room", "Office", "Building", "Common Area", "Other"]
    },
    "rooms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "subGroups": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "eco": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "active": {
          "type": "boolean",
          "default": false
        },
        "activatedAt": {
          "type": "string"
        },
        "allowed": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "maximumOccupancy": {
      "type": "number",
      "default": 2,
      "minimum": 1
    },
    "housekeepingStatus": {
      "type": "string",
      "enum": ["clean", "dirty", "inspected", "pickup"],
      "default": "dirty"
    },
    "serviceStatus": {
      "type": "string",
      "enum": ["inService", "outOfOrder", "outOfService"],
      "default": "inService"
    },

    "systemData": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/systemData"
    }
  },
  "oneOf": [
    {
      "not": {"required": ["type"]}
    },
    {
      "required": ["type"],
      "anyOf": [
        {
          "properties": {
            "type": { "enum": ["Hotel room"]}
          },
          "required": ["housekeepingStatus", "serviceStatus", "features", "maximumOccupancy"]
        },
        {
          "properties": {
            "type": { "enum": ["Classroom", "Office", "Building", "Common Area", "Other"]}
          },
          "required": []
        }
      ]
    }
  ]

}
