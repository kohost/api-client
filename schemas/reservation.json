{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/reservation.json",
  "title": "Reservation",
  "type": "object",
  "required": ["type", "status", "checkInDateTime", "checkOutDateTime"],
  "properties": {
    "id": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/id"
    },
    "reservationGuestId": {
      "type": "string"
    },
    "type": {
      "type": "string" 
    },
    "sharedGuestIds": {
      "type":"array",
      "items": {
        "type": "string"
      }
    },
    "hotelRoomId": { 
      "type":"string"
    },
    "status": {
      "type": "string",
      "enum": ["reserved", "checkedIn", "checkedOut", "cancelled", "noShow"]
    },
    "confirmationNumber": {
      "type": "string"
    },
    "checkInDateTime": {
      "type": "string",
      "format": "date-time"
    },
    "checkOutDateTime": {
      "type": "string",
      "format": "date-time"
    },
    "adultCount": {
      "type": "number",
      "default": 1,
      "minimum": 1
    },
    "childCount": {
      "type": "number",
      "default": 0
    },
    "rateSuppressed": {
      "type": "boolean"
    },
    "paymentId": {
      "type": "string"
    },
    "companyId": {
      "type": "string"
    },
    "travelAgentId": {
      "type": "string"
    },
    "systemData": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/systemData"
    }
  }
}
