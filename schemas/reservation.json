{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/reservation.json",
  "title": "Reservation",
  "type": "object",
  "required": ["status", "checkInDateTime", "checkOutDateTime", "hotelRooms"],
  "properties": {
    "id": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/id"
    },
    "status": {
      "type": "string",
      "enum": ["confirmed", "checkedIn", "checkedOut", "cancelled"]
    },
    "checkInDateTime": {
      "type": "string",
      "format": "date-time"
    },
    "checkOutDateTime": {
      "type": "string",
      "format": "date-time"
    },
    "hotelRooms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "systemData": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/systemData"
    }
  }
}
