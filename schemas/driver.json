{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.kohost.app/schemas/v3/driver.json",
  "title": "Driver",
  "description": "Driver configuration",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/id"
    },
    "type": {
      "type": "string"
    },
    "config": {
      "type": "object",
      "default": {}
    },
    "health": {
      "type": "object",
      "properties": {
        "upSince": {
          "type": "string",
          "format": "date-time"
        },
        "lastSeen": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "createdAt": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/createdAt"
    },
    "updatedAt": {
      "$ref": "https://api.kohost.app/schemas/v3/definitions/common.json#/definitions/updatedAt"
    }
  },
  "additionalProperties": false,
  "required": ["id", "name", "config", "health"]
}
